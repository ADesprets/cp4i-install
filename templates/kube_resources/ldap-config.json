{
  "spec": {
    "template": {
      "spec": {
        "containers": [
          {
            "name": "openldap",
            "volumeMounts": [
              {
                "name": "ldap-db-main",
                "mountPath": "/var/lib/ldap"
              },
              {
                "name": "ldap-db-config",
                "mountPath": "/etc/ldap/slapd.d"
              }
            ],
            "env": [
              {
                "name": "LDAP_DOMAIN",
                "value": "ibm.com"
              },
              {
                "name": "LDAP_ORGANISATION",
                "value": "ibm integration"
              },
              {
                "name": "LDAP_ADMIN_PASSWORD",
                "value": "uLgH75o@At+9?zY0RBB"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "ldap-db-main",
            "persistentVolumeClaim": {
              "claimName": "pvc-ldap-main"
            }
          },
          {
            "name": "ldap-db-config",
            "persistentVolumeClaim": {
              "claimName": "pvc-ldap-config"
            }
          }
        ]
      }
    }
  }
}
