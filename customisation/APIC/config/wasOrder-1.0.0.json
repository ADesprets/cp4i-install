{
  "swagger": "2.0",
  "info": {
    "title": "wasOrder",
    "x-ibm-name": "wasorder",
    "version": "1.0.0",
    "description": "Java Fake order API in WAS published in the cluster",
    "contact": {
      "name": "Arnauld Desprets",
      "email": "arnauld_desprets@fr.ibm.com"
    }
  },
  "x-ibm-configuration": {
    "cors": {
      "enabled": true
    },
    "gateway": "datapower-api-gateway",
    "type": "rest",
    "phase": "realized",
    "enforced": true,
    "testable": true,
    "assembly": {
      "execute": [
        {
          "gatewayscript": {
            "version": "2.0.0",
            "title": "gatewayscript",
            "source": "var all_apis = context.get('api');\nconsole.error('>>> all_apis: ' + JSON.stringify(all_apis));\n\nvar rpath = context.get('request.path');\nvar bpath = context.get('api.root');\nvar dest_path = rpath.substr(bpath.length + 1);\ncontext.set('dest_path', dest_path);"
          }
        },
        {
          "invoke": {
            "version": "2.0.0",
            "title": "invoke",
            "backend-type": "detect",
            "header-control": {
              "type": "blocklist",
              "values": []
            },
            "parameter-control": {
              "type": "allowlist",
              "values": []
            },
            "timeout": 60,
            "verb": "keep",
            "chunked-uploads": true,
            "persistent-connection": true,
            "target-url": "$(target-url)$(dest_path)$(request.search)",
            "follow-redirects": false,
            "inject-proxy-headers": true
          }
        },
        {
          "parse": {
            "version": "2.2.0",
            "title": "parse",
            "parse-settings-reference": {
              "default": "apic-default-parsesettings"
            },
            "use-content-type": true
          }
        },
        {
          "validate": {
            "version": "2.7.0",
            "title": "validate",
            "graphql-error-policy": "all",
            "compile-settings": {
              "wsdl-validate-body": "strict"
            },
            "validate-against": "definition",
            "definition": "#/definitions/Order"
          }
        }
      ]
    },
    "properties": {
      "target-url": {
        "value": "https://demo-backend.apps.66d5d603d361e1cd7ea1cfc0.ocp.techzone.ibm.com/demo/api",
        "description": "The URL of the target service",
        "encoded": false
      }
    },
    "activity-log": {
      "enabled": true,
      "success-content": "activity",
      "error-content": "payload"
    },
    "servers": [
      {
        "url": "https://cp4i-apic-gw-gateway-cp4i.apps.66d5d603d361e1cd7ea1cfc0.ocp.techzone.ibm.com/org1/sandbox/wasorder/v1/demo/api",
        "description": "",
        "type": [
          "production",
          "development"
        ]
      }
    ],
    "oauth-servers": []
  },
  "basePath": "/wasorder/v1/demo/api",
  "paths": {
    "/order/{orderId}": {
      "get": {
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/Order",
              "title": "order"
            }
          }
        },
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "clientID": {
      "type": "apiKey",
      "in": "header",
      "name": "X-IBM-Client-Id"
    }
  },
  "security": [
    {
      "clientID": []
    }
  ],
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "responses": {},
  "definitions": {
    "Order": {
      "type": "object",
      "title": "order",
      "properties": {
        "customer": {
          "type": "string"
        },
        "customerid": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "maxLength": 200
        },
        "id": {
          "type": "string"
        },
        "ordertime": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "quantity": {
          "type": "integer"
        },
        "region": {
          "type": "string"
        }
      },
      "example": {
        "customer": "RaphaÃ«l Dumas",
        "customerid": "f563795a-294f-4cc7-8d55-edccea6fc358",
        "description": "L Navy Straight-leg",
        "id": "123456789",
        "ordertime": "2024-09-16 06:44:01.621",
        "price": 28.2,
        "quantity": 4,
        "region": "SA"
      }
    }
  }
}